<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="facile_openid.openid_controller" class="Facile\OpenIdBundle\Controller\OpenIdController" public="false">
            <argument type="service" id="session" />
            <argument type="service" id="router" />
            <tag name="controller.service_arguments" />
        </service>

        <service id="facile_openid.openid_provider" class="Facile\OpenIdBundle\Security\Authentication\Provider\OpenIdProvider" public="false">
            <argument type="service" id="Facile\OpenIdBundle\Security\UserProvider" />
        </service>

        <service id="facile_openid.openid_listener" class="Facile\OpenIdBundle\Security\Firewall\OpenIdListener" public="false">
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="security.authentication.manager"/>
            <argument type="service" id="facile_openid.jwt_parser" />
        </service>
        
        <service id="facile_openid.jwt_parser" class="Lcobucci\JWT\Parser" public="false"/>

    </services>
</container>
